<odoo>

    <template id="assets_backend_lead_signup" name="crm lead signup" inherit_id="web.assets_frontend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/ent_lead_signup/static/src/js/lead_signup.js"></script>
        </xpath>
    </template>
	<template id="ent_lead_signup_email" name="Email Signup">
		<t t-call="website.layout">
			<form action="/return/lead/signup" method="post">
				<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
				<div class="form-group form-field o_website_form_required_custom">
					<label class="col-md-3 col-sm-4 control-label" for="contact_name">Your Email</label>
                    <div class="col-md-7 col-sm-8">
                        <input type="text" class="form-control o_website_form_input" name="email" required="" placeholder="Enter Your Email..."/>
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-md-offset-3 col-sm-offset-4 col-sm-8 col-md-7 mt16">
                        <input class="btn btn-primary" type="submit" name="Submit" string="Submit"></input>
                        <span id="o_website_form_result"></span>
                    </div>
                </div>
			</form>
		</t>
	</template>
	
	<template id="ent_lead_agreement_signup" name="Email Signup Lead">
		<t t-call="website.layout">
			<form action="/submit/lead/signup" method="post">
				<div id="wrap">
					<div class="container mt16">
						<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
						<input type="hidden" name="lead_id" t-att-value="crm_lead_id.id"/>
						<div class="clearfix"/>
			            <div class="bg-primary col-md-8">
			            	<h2> SIGNUP FORM </h2>
		            	</div>
		            	<div class="clearfix"/>
						<div class="form-group form-field o_website_form_required_custom col-md-8">
							<div class="col-md-6 col-sm-4">
				                <label for="name" string="Lead Name"/>
				                <input type="text" class="form-control o_website_form_input" name="primary_name" t-att-value="lead_primary_contact.name" required="" placeholder="Name"/>
				            </div>
				            <div class="col-md-6 col-sm-8">
				            	<label for="s_name" string="Lead S Name"/>
				            	<select class="form-control" name="primary_title">
				            		<option></option>
				            		<t t-foreach="title_ids" t-as="title">
				            			<option t-value="title.id" t-att-selected="title.id == lead_primary_contact.title.id"><span t-field="title.name"/></option>
				            		</t>
				            	</select>
				                <!--input type="text" class="form-control o_website_form_input" name="primary_title" t-att-value="lead_primary_contact.title.name" required="" placeholder="Title"/-->
				            </div>
				            
				            <div class="col-md-12 col-sm-4">
				            	<label for="lead_website" string="Website"/>
				                <input type="text" class="form-control o_website_form_input" name="company" t-att-value="crm_lead_id.name" required="" placeholder="Comapny"/>
				            </div>
				            
				            <div class="col-md-5 col-sm-4">
				            	<label for="lead_website" string="Website"/>
				                <input type="text" class="form-control o_website_form_input" name="c_street" t-att-value="crm_lead_id.c_street" required="" placeholder="Address Line 1"/>
				            </div>
				            <div class="col-md-7 col-sm-8">
				            	<label for="email_from" string="Email"/>
				                <input type="text" class="form-control o_website_form_input" name="c_street3" t-att-value="crm_lead_id.c_street3" required="" placeholder="Suit No./Room No."/>
				            </div>
				            
				            <div class="col-md-4 col-sm-4">
				            	<label for="lead_website" string="Website"/>
				                <input type="text" class="form-control o_website_form_input" name="c_city" t-att-value="crm_lead_id.c_city" required="" placeholder="City"/>
				            </div>
				            <div class="col-md-4 col-sm-8">
				            	<label for="c_state_id" string="State"/>
				            	<select class="form-control" name="c_state_id">
				            		<option></option>
				            		<t t-foreach="state_ids" t-as="state">
				            			<option t-value="state.id" t-att-selected="state.id == crm_lead_id.c_state_id.id"><span t-field="state.name"/></option>
				            		</t>
				            	</select>
				                <!--input type="text" class="form-control o_website_form_input" name="c_state_id" t-att-value="crm_lead_id.c_state_id.name" required="" placeholder="State"/-->
				            </div>
				            <div class="col-md-4 col-sm-8">
				            	<label for="c_zip" string="Zip"/>
				                <input type="text" class="form-control o_website_form_input" name="c_zip" t-att-value="crm_lead_id.c_zip" required="" placeholder="Zip"/>
				            </div>
				            
				            <div class="col-md-4 col-sm-4">
				            	<label for="lead_website" string="Website"/>
				                <input type="text" class="form-control o_website_form_input" name="phone" t-att-value="crm_lead_id.phone" required="" placeholder="Phone"/>
				            </div>
				            <div class="col-md-4 col-sm-8">
				            	<label for="lead_ext" string="Ext"/>
				                <input type="text" class="form-control o_website_form_input" name="lead_ext" required="" placeholder="Ext" t-att-value="crm_lead_id.lead_ext"/>
				            </div>
				            <div class="col-md-4 col-sm-8">
				            	<label for="email_from" string="Mobile"/>
				                <input type="text" class="form-control o_website_form_input" name="primary_mobile" required="" t-att-value="lead_primary_contact.mobile" placeholder="Mobile"/>
				            </div>
				            
				            <div class="col-md-5 col-sm-4">
				            	<label for="lead_website" string="Website"/>
				                <input type="text" class="form-control o_website_form_input" name="primary_direct_phone" required="" placeholder="Direct Phone" t-att-value="lead_primary_contact.phone"/>
				            </div>
				            <div class="col-md-7 col-sm-8">
				            	<label for="email_from" string="Email"/>
				                <input type="text" class="form-control o_website_form_input" name="email_from" t-att-value="crm_lead_id.email_from" required="" placeholder="Email From"/>
				            </div>
				            
				            <div class="clearfix"/>
				            <div class="bg-primary">
				            	<h3 class="text-center"> HIRING OPTIONS </h3>
			            	</div>
			            	
			            	<div class="clearfix"/>
			            	<t t-foreach="crm_lead_id.job_description_ids" t-as="job_desc">
						        <table class="table table-condense table-border">
						        	<thead>
						        		<th>HIRING OPTIONS</th>
						        		<th>NUMBERS OF HOURS PER WEEK</th>
						        		<th>HOURLY RATE</th>
						        	</thead>
						        	<tbody>
						        		<tr>
						        			<td rowspan="5">
						        				<input type="checkbox" name="hiring_perm" t-att-checked="job_desc.hiring_model == 'permanent'"/>
						        				PERMANENT	
					        				</td>
						        			<td>
						        				<select class="form-control perm_input" name="permanent_hour_selection">
								    				<option value='10' t-att-selected="job_desc.permanent_hour_selection == '10'">10 Hours</option>
													<option value='20' t-att-selected="job_desc.permanent_hour_selection == '20'">20 Hours</option>
													<option value='30' t-att-selected="job_desc.permanent_hour_selection == '30'">30 Hours</option>
													<option value='40' t-att-selected="job_desc.permanent_hour_selection == '40'">40 Hours</option>
													<option value='80' t-att-selected="job_desc.permanent_hour_selection == '80'">80 Hours</option>
													<option value='90' t-att-selected="job_desc.permanent_hour_selection == '90'">90 Hours</option>
													<option value='100' t-att-selected="job_desc.permanent_hour_selection == '100'">100 Hours</option>
													<option value='160' t-att-selected="job_desc.permanent_hour_selection == '160'">160 Hours</option>
													<option value='180' t-att-selected="job_desc.permanent_hour_selection == '180'">180 Hours</option>
													<option value='200' t-att-selected="job_desc.permanent_hour_selection == '200'">200 Hours</option>
													<option value='40_20' t-att-selected="job_desc.permanent_hour_selection == '40_20'">40-20 Hours</option>
													<option value='20_10' t-att-selected="job_desc.permanent_hour_selection == '20_10'">20-10 Hours</option>
								    			</select>
						        			<!--input type="text" class="perm_input" name="permanent_hour_selection" t-att-value="job_desc.permanent_hour_selection"/--></td>
						        			<td><input type="text" class="form-control perm_input" name="rate_per_hour" t-att-value="job_desc.rate_per_hour"/></td>
					        			</tr>
					        			<tr>
					        				<td><input type="text" class="form-control" name="seasonal_hour" placeholder="Season Non season" t-att-value="job_desc.seasonal_hour"/></td><!--Which field value should be here-->
					        				<td rowspan="4"><input type="text" class="form-control" name="seasonal_rate_per_hour" placeholder="Season Non Season Rate" t-att-value="job_desc.seasonal_rate_per_hour"/></td><!--Which rate should be here-->
					        			</tr>
					        			<tr>
					        				<td>SEASON PERIOD</td>
					        			</tr>
					        			<tr>
					        				<td><input type="text" class="form-control" name="perm_season_date_from" placeholder="PERMANENT Season from" t-att-value="job_desc.perm_season_date_from"/></td><!--Which field value should be here-->
					        			</tr>
					        			<tr>
					        				<td><input type="text" class="form-control" name="perm_season_date_to" placeholder="PERMANENT Season to" t-att-value="job_desc.perm_season_date_to"/></td><!--Which field value should be here-->
					        			</tr>
					        			<tr>
						        			<td>
						        				<input type="checkbox" name="hiring_model_temporary" t-att-checked="job_desc.hiring_model == 'temporary'"/>
						        				TEMPORARY	
					        				</td>
						        			<td>
						        				<select class="form-control tempor_input" name="temporary_hour_selection">
								    				<option value='20' t-att-selected="job_desc.temporary_hour_selection == '20'">20 Hours</option>
													<option value='40' t-att-selected="job_desc.temporary_hour_selection == '40'">40 Hours</option>
												</select>
						        			<!--input type="text" class="tempor_input" name="temporary_hour_selection" t-att-value="job_desc.temporary_hour_selection"/--></td>
						        			<td><input type="text" class="form-control tempor_input" name="rate_per_hour" t-att-value="job_desc.rate_per_hour"/></td>
					        			</tr>
					        			<tr>
						        			<td>
						        				<input type="checkbox" name="hiring_model_ondemand" t-att-checked="job_desc.hiring_model == 'On Demand'"/>
						        				ONDEMAND	
					        				</td>
						        			<td>
						        				<select class="form-control ondemand_input" name="number_of_hour_on_demand">
								    				<option value='10' t-att-selected="job_desc.permanent_hour_selection == '10'">10 Hours</option>
													<option value='20' t-att-selected="job_desc.permanent_hour_selection == '20'">20 Hours</option>
													<option value='30' t-att-selected="job_desc.permanent_hour_selection == '30'">30 Hours</option>
													<option value='40' t-att-selected="job_desc.permanent_hour_selection == '40'">40 Hours</option>
													<option value='80' t-att-selected="job_desc.permanent_hour_selection == '80'">80 Hours</option>
													<option value='90' t-att-selected="job_desc.permanent_hour_selection == '90'">90 Hours</option>
													<option value='100' t-att-selected="job_desc.permanent_hour_selection == '100'">100 Hours</option>
													<option value='160' t-att-selected="job_desc.permanent_hour_selection == '160'">160 Hours</option>
													<option value='180' t-att-selected="job_desc.permanent_hour_selection == '180'">180 Hours</option>
													<option value='200' t-att-selected="job_desc.permanent_hour_selection == '200'">200 Hours</option>
													<option value='40_20' t-att-selected="job_desc.permanent_hour_selection == '40_20'">40-20 Hours</option>
													<option value='20_10' t-att-selected="job_desc.permanent_hour_selection == '20_10'">20-10 Hours</option>
								    			</select>
						        			<!--input type="text" class="ondemand_input" name="number_of_hour_on_demand" placeholder="NUMBER OF HOUR/MONTH" t-att-value="job_desc.permanent_hour_selection" t-if="job_desc.hiring_model == 'On Demand'"/><input type="text" name="number_of_hour_on_demand_update" placeholder="NUMBER OF HOUR/MONTH" t-if="job_desc.hiring_model != 'On Demand'"/--></td><!--Which field value should be here-->
						        			<td><input type="text" class="form-control ondemand_input" name="rate_per_hour" placeholder="$10" t-att-value="job_desc.rate_per_hour"/></td><!--Which field should be here-->
					        			</tr>
						        	</tbody>
						        </table>
						        <div class="clearfix"/>
						        
						        <div class="bg-primary">
						        	<h3 class="text-center"> JOB DETAILS </h3>
					        	</div>
					        	
					        	<div class="clearfix"/>
					        	<div class="col-sm-6">
					        		<label class="placeholdercontrol-label" for="profile">Profile</label>
					        		<select class="form-control" name="profile">
						        		<option></option>
						        		<t t-foreach="profile_ids" t-as="profile">
						        			<option t-value="profile.id" t-att-selected="profile.id == job_desc.job_profile_id.id"><span t-field="profile.name"/></option>
						        		</t>
						        	</select>
					        		<!--input type="text" class="form-control" name="profile" placeholder="Profile" t-att-value="job_desc.job_profile_id.name"/-->
					        	</div>
					        	
					        	<div class="col-sm-6">
					        		<label class="placeholdercontrol-label" for="task_tobe_done">Experiance In Year</label>
					        		<select class="form-control" name="experiance">
						        		<option></option>
						        		<t t-foreach="experience_ids" t-as="experience">
						        			<option t-value="experience.id" t-att-selected="experience.id == job_desc.experience_id.id"><span t-field="experience.name"/></option>
						        		</t>
						        	</select>
					        		<!--input type="text" class="form-control" name="experiance" placeholder="Experience" t-att-value="job_desc.experience_id.name"/-->
					        	</div>
					        	<div class="clearfix"/>
					        	
					        	<div class="col-sm-12">
					        		<label class="placeholdercontrol-label" for="task_tobe_done">Task to be Done1</label>
					        		<input type="text" class="form-control" name="task_tobe_done" placeholder="Task Tobe Done1" t-att-value="job_desc.task_tobe_done"/>
					        	</div>
					        	
					        	<div class="col-sm-12">
					        		<label class="placeholdercontrol-label" for="task_tobe_done2">Task to be Done2</label>
					        		<input type="text" class="form-control" name="task_tobe_done2" placeholder="Task Tobe Done2" t-att-value="job_desc.task_to_be_done2"/>
					        	</div>
					        	
					        	<div class="col-sm-12">
					        		<label class="placeholdercontrol-label" for="task_tobe_done3">Task to be Done3</label>
					        		<input type="text" class="form-control" name="task_tobe_done3" placeholder="Task Tobe Done3" t-att-value="job_desc.task_to_be_done3"/>
					        	</div>
					        	
					        	<div class="col-sm-12">
					        		<label class="placeholdercontrol-label" for="task_tobe_done4">Task to be Done4</label>
					        		<input type="text" class="form-control" name="task_tobe_done4" placeholder="Task Tobe Done4" t-att-value="job_desc.task_to_be_done4"/><!--Which field value would be here-->
					        	</div>
					        	
					        	<div class="col-sm-12">
					        		<label class="placeholdercontrol-label" for="nature_experience">Software Experience</label>
					        		<input type="text" class="form-control" name="nature_experience" t-att-value="', '.join([nature_expr.name for nature_expr in job_desc.nature_experience_ids])" placeholder="Nature Experience"/><!--remain to add to the controller-->
					        	</div>
					        	
					        	<div class="clearfix"/>
					        	<div class="col-sm-6">
					        		<label class="placeholdercontrol-label" for="reporting_id">Reporting</label>
					        		<select class="form-control" name="reporting_id">
						        		<option></option>
						        		<t t-foreach="reporting_ids" t-as="reporting">
						        			<option t-value="reporting.id" t-att-selected="reporting.id == job_desc.reporting_id.id"><span t-field="reporting.name"/></option>
						        		</t>
						        	</select>
					        		<!--input type="text" class="form-control" name="reporting_id" t-att-value="job_desc.reporting_id.name" placeholder="Reporting"/-->
					        	</div>
					        	<div class="col-sm-6">
					        		<label class="control-label" for="tentative_date">Tentative Date</label>
					        		<input type="date" class="form-control" name="tentative_start_date" t-att-value="job_desc.tentative_date" placeholder="Nature Experience"/>
					        	</div>
					        	
					        	<div class="clearfix"/>
					        	<div class="form-group form-field o_website_form_required_custom">
									<label class="col-md-3 col-sm-4 control-label" for="contact_name">Working Time:</label>
								    <div class="col-md-3 col-sm-8">
								    	<label class="control-label" for="timzone">Time Zone:</label>
								    	<select class="form-control" name="timezone">
								    		<option></option>
								    		<t t-foreach="timezone_ids" t-as="timezone">
								    			<option t-value="timezone.id" t-att-selected="timezone.id == job_desc.timezone_id.id"><span t-field="timezone.name"/></option>
								    		</t>
								    	</select>
								        <!--input type="text" class="form-control o_website_form_input" name="timezone" t-att-value="job_desc.timezone_id.name" required="" placeholder="Time zone"/-->
								    </div>
								    <div class="col-md-3 col-sm-8">
								    	<label class="control-label" for="timefrom">Time From:</label>
								    	<select class="form-control" name="timefrom">
								    		<option></option>
								    		<t t-foreach="time_from_ids" t-as="time_from">
								    			<option t-value="time_from.id" t-att-selected="time_from.id == job_desc.from_timezone_id.id"><span t-field="time_from.name"/></option>
								    		</t>
								    	</select>
								        <!--input type="text" class="form-control o_website_form_input" name="timefrom" t-att-value="job_desc.from_timezone_id.name" required="" placeholder="Time from"/-->
								    </div>
								    <div class="col-md-3 col-sm-8">
								    	<label class="control-label" for="timeto">Time To:</label>
								    	<select class="form-control" name="timeto">
								    		<option></option>
								    		<t t-foreach="time_to_ids" t-as="time_to_id">
								    			<option t-value="time_to_id.id" t-att-selected="time_to_id.id == job_desc.to_timezone_id.id"><span t-field="time_to_id.name"/></option>
								    		</t>
								    	</select>
								        <!--input type="text" class="form-control o_website_form_input" name="timeto" t-att-value="job_desc.to_timezone_id.name" required="" placeholder="Time to"/-->
								    </div>
								</div>
					        </t>
					        <div class="clearfix"/>
					        <div class="col-sm-4">
					        	<input name="agree_terms_and_con"  class="accept_tc_js" type="checkbox" string="Accept T&amp;C"/> Accept T&amp;C
					        	<a class="signup_tc_pdf" href="/accept/lead/signup/http">Download</a>
					        </div>
				        </div>
				        <div class="form-group">
				            <div class="col-sm-8 col-md-7 mt16">
				                <input type="submit" class="btn btn-primary pull-left signup_submit" disabled="True" string="Submit"/>
				            </div>
				        </div>
			        </div>
	            </div>
			</form>
		</t>
	</template>
	
	<template id="sugnup_success_sent" name="Signup Success">
		<t t-call="website.layout">
			<div id="wrap">
				<div class="container">
					<div class="col-md-6 alert alert-success">
						Sign up process successfully!
					</div>
				</div>
			</div>
		</t>
	</template>
</odoo>
