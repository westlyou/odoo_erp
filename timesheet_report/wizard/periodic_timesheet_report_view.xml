<odoo>

	<record id="periodic_report_wizard_form" model="ir.ui.view">
	    <field name="name">periodic.report.wizard.form</field>
	    <field name="model">periodic.report.wizard</field>
	    <field name="arch" type="xml">
	    	<form string="Timesheet Report">
	    		<group>
	    			<group>
	    				<field name="start_date" required="1"/>
	    				<field name="end_date" required="1"/>
	    				<field name="file" filename="filename"/>
	    			</group>
	    		</group>
	    		<footer>
	    			<button name="generate_report_xls" string="Generate Report" 
	    			class="btn-primary" type="object"/> 
	    			or
	    			<button string="Cancel" class="btn-default" special="cancel"/>
	    		</footer>
	    	</form>
	    </field>
	</record>
	
	<record id="action_periodic_report_wizard" model="ir.actions.act_window">
	    <field name="name">Timesheet Report</field>
	    <field name="type">ir.actions.act_window</field>
	    <field name="res_model">periodic.report.wizard</field>
	    <field name="view_type">form</field>
	    <field name="view_mode">form</field>
	    <field name="target">new</field>
	</record>            

	
	<menuitem name="Timesheet Periodic Report"
              parent="project.menu_project_management"
              id="menu_timesheet_periodic_report"
              action="action_periodic_report_wizard"/>
	
</odoo>