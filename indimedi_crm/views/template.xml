<odoo>
	
    <template id="i_agree_form" name="Agrement">
       <t t-call="website.layout">
        <div class="oe_structure">
          <div class="container">
            <center><h3>Do you agree with the term and condition?</h3>
            <p>
              <a class="btn btn-primary btn-lg" t-att-href="'/agreement_done/%s' % (agreement)">I Agree</a>
            </p>
            </center>
          </div>
        </div>
      </t>
    </template>
    
    <template id="i_agree" name="Agrement">
       <t t-call="website.layout">
        <div class="oe_structure">
          <div class="container">
            <center><h3>Thanks for accepting terms and conditions. <br/>Your signup is completed now.</h3>
            </center>
          </div>
        </div>
      </t>
    </template>
    
    <template id="already_agreed" name="Agrement">
       <t t-call="website.layout">
        <div class="oe_structure">
          <div class="container">
            <center><h3>You already accepted teams and condition.</h3>
            </center>
          </div>
        </div>
      </t>
    </template>
	
</odoo>