<odoo>
	<record id="t_invoice_payment_wizard" model="ir.ui.view">
        <field name="name">invoice.payment.form</field>
        <field name="model">invoice.payment</field>
        <field name="arch" type="xml">
        	<form string="Invoice Payment">
				<group>
					<group>
						<field name="invoice_ids" invisible="1"/>
						<field name="payment_method_id"/>
						<field name="date_payment" required="1"/>
						<field name="amount" required="1"/>
						<field name="remark"/>
					</group>
				</group>
        		<footer>
        			<button name="action_mark_as_paid" type="object" class="btn-primary" string="Pay"/>
        			<button name="cancel" special="cancel" string="Close" class="oe_link"/>
        		</footer>
        	</form>
        </field>
	</record>
        
</odoo>