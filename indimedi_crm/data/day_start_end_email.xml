<odoo>
	<record id="email_task_day_start" model="mail.template">
		<field name="name">Task Day Start Email</field>
		<field name="email_from"><![CDATA[${ctx['email_from']|safe}]]></field>
		<field name="subject">Day Start Email
		</field>
		<field name="email_to"><![CDATA[${ctx['email_to']}]]></field>
		<field name="model_id" ref="indimedi_crm.model_project_task" />
		<field name="auto_delete" eval="True" />
		<field name="user_signature" eval="False" />
		<field name="body_html">
                <![CDATA[
				Day Start Email
                ]]>
		</field>
	</record>
	
	<record id="email_task_day_end" model="mail.template">
		<field name="name">Task Day End Email</field>
		<field name="email_from"><![CDATA[${ctx['email_from']|safe}]]></field>
		<field name="subject">Day End Email
		</field>
		<field name="email_to"><![CDATA[${ctx['email_to']}]]></field>
		<field name="model_id" ref="indimedi_crm.model_project_task" />
		<field name="auto_delete" eval="True" />
		<field name="user_signature" eval="False" />
		<field name="body_html">
                <![CDATA[
				Day End Email
                ]]>
		</field>
	</record>
	
</odoo>